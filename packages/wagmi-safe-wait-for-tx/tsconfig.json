{
  "compilerOptions": {
    "target": "ES2021",
    "outDir": "dist",
    "lib": [
      "es2021",
      "dom",
    ],
    "declaration": true,
    "allowSyntheticDefaultImports": false,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "**/dist/**",
    "**/node_modules/**"
  ]
}